---
import '~/styles/global.css';
import '@fontsource-variable/playfair-display';
import '@fontsource-variable/lexend';
import '@fontsource/lato';
import '@fontsource-variable/hanken-grotesk';
import Nav from '~/components/nav.astro';
import Footer from '~/components/footer.astro';
import Cursor from '~/components/cursor.astro';
import Noise from '~/components/noise.astro';
import { ClientRouter } from 'astro:transitions';
import Theme from '~/components/theme.astro';

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <Theme />
        <ClientRouter />
    </head>
    <body
        class="relative transition-colors duration-300 ease-out antialised bg-off-white dark:bg-slate-950 text-black dark:text-off-white font-hanken-grotesk"
        transition:persist
    >
        <!-- <Noise /> -->
        <div
            class="min-h-dvh w-full flex flex-col mx-auto max-w-3xl px-4 py-8 gap-8"
        >
            <Nav />
            <main class="flex-grow">
                <Cursor />
                <slot />
            </main>
            <Footer />
        </div>
    </body>
</html>

<style>
    html,
    body {
        margin: 0;
        width: 100%;
        height: 100%;
    }
</style>
