---
import BaseLayout from '~/layouts/base-layout.astro';
import Link from '~/components/shared/link.astro';
---

<BaseLayout>
	<div class="flex flex-col gap-4">
		<h1 class="text-4xl">Music</h1>
		<ul class="list-disc list-inside space-y-2">
			<li>
				<Link url="/music/playlists" title="My playlists" internal />
			</li>
			<li>
				<Link url="/music/vinyls" title="My vinyls" internal />
			</li>
			<li>
				<Link url="https://music.apple.com/profile/damitzi__" title="My Apple Music" />
			</li>
		</ul>
	</div>
</BaseLayout>
